mixin currency
  span.currency &nbsp;&#8381;
      

mixin modalCallback
  .modal.modal-callback#callback
    h3.modal__header Заказать звонок
    p.modal__text Для заказа звонка заполните форму. <br> Мы свяжемся с Вами в указанное время!
    form.form-callback(action="#")
      input(type="text" placeholder="Имя" name="name").input-text.modal__input-text
      input(type="text" placeholder="8 (999) 555-55-55" name="phone").input-text.modal__input-text
      button.btn.btn--large.modal__btn Отправить
      

mixin modalOrder
  .modal.modal-order#order
    .modal-order__wrapper
      ul.modal-order__features
        li.order-feature
          .order-feature__icon.order-feature__icon--delivery
          .order-feature__content
            .order-feature__header Доставка <br> за 90 минут
            .order-feature__text По Москве до 3-х пар
        li.order-feature
          .order-feature__icon.order-feature__icon--return
          .order-feature__content
            .order-feature__header Возврат
            .order-feature__text По Москве до 3-х пар
        li.order-feature
          .order-feature__icon.order-feature__icon--guarantee
          .order-feature__content
            .order-feature__header Гарантия
            .order-feature__text Оригинальная обувь с гарантией на год!
      .modal-order__content
        .modal-order__item
          img.modal-order__item-picture(src="img/order-1.jpg", alt="New Balance")
          .modal-order__price-old 8 700
          .modal-order__price-new 3 990 руб
          .modal-order__name New Balance женские M574BCC (2294)
          .modal-order__availability Товар в наличии
        form.form-order.modal-order__form(action="#")
          input(type="text" placeholder="Ваше имя" name="name").input-text.input-text--large.modal__input-text
          select#size.select.modal-order__select(name="size")
            option(value="36" disabled selected) Ваш размер
            option(value="36") 36
            option(value="37") 37
            option(value="38") 38
            option(value="39") 39
            option(value="40") 40
          input(type="text" placeholder="8 (999) 555-55-55" name="phone").input-text.input-text--large.modal__input-text
          input(type="email" placeholder="E-mail" name="email").input-text.input-text--large.modal__input-text
          input(type="text" placeholder="Адрес доставки" name="address").input-text.input-text--large.modal__input-text
          button.btn.btn--large.modal__btn.modal-order__button Купить
          
mixin shop-features(modificator)
  ul.shop-features(class="shop-features--"+modificator)
    li.shop-features__item.shop-features__item--age
      .shop-features__item-wrapper
        h3.shop-features__item-header Нам 5 лет!
        p.shop-features__item-content Крупнейший магазин Newbalance в Москве
    li.shop-features__item.shop-features__item--return
      .shop-features__item-wrapper
        h3.shop-features__item-header Возврат
        p.shop-features__item-content Обмен и возврат кроссовок в течении 14 дней!
    li.shop-features__item.shop-features__item--originals
      .shop-features__item-wrapper
        h3.shop-features__item-header Оригиналы из США
        p.shop-features__item-content Качественная обувь по ценам США
    li.shop-features__item.shop-features__item--guarantee
      .shop-features__item-wrapper
        h3.shop-features__item-header Гарантия 1 год
        p.shop-features__item-content Оригинальная обувь с гарантией на год